<div class="new">
  <div class="container mt-3">
  <h1><span>1 </span>name your group<sup> *</sup></h1>
  <p>here you can choose a title</p>
  <div class="label-none">
    <%= simple_form_for @group do |f| %>
		  <%= f.input :group_name, lable: false, placeholder: '👉🏼 best team ever' %>
        <div class="btn-wrapper">
          <%= f.submit '💾 save and go to the next step', class:"btn-light" %>
          <%= link_to "Back", root_path, class:"btn-dark", data: { turbolinks: false } %>
        </div>
		<% end %>
	</div>
<br>
  <div>
    <% if current_user %>
      <h2 class="font-weight-normal">saved groups*</h2>
      <p>here you can see your saved groups and start a new split.</p>
      <div class="grid">
        <div class="row">
          <% current_user.groups.each do |group| %>
            <div class="col-8">
              <%= link_to group.group_name, new_group_activity_cost_path(group) %>
		          <%= link_to "🗑", group_path(group), method: :delete %>
		          <div class="collapse" id="collapseExample">
		            <% group.members.each do |member| %>
				          <%= member.name %>
                <% end %>
             </div>
            </div>
            <div class="col-4 d-flex">
  		        <a data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample"> + </a>
              <div class="collapse" id="collapseExample">
  				      <%= link_to "start a new split with this team ", new_group_activity_cost_path(group), class:"btn-light font-weight-light" %>
              </div>
            </div>
            <hr style="width:70%;text-align:left;margin-left:0">
          <% end %>
	      </div>
      </div>
    <% end %>
  </div>
</div>
