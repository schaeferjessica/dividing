<div class="group-edit setup">
	<div class="container">
	  <h2>edit group<sup>*</sup> <%= @group.group_name %></h2>
		<div class="edit">
		  <%= simple_form_for @group do |f| %>
			  <%= f.input :group_name, label: false, placeholder: '👉 update your team name' %>
	          <%= f.submit 'save me  💾', class:"btn btn-light" %>
	      <% end %>
	    </div>
	       <h3> group members: </h3>
		     <% @group.members.each do |member| %>
  			   <button type="button" class="btn btn-light"><%= member.name %><%= link_to "🗑", group_member_path(@group, member), remote: true, method: :delete, class:"delete" %></button>
  		   <% end %>
  		    <div class="form-member edit-member-input">
  		     <%= simple_form_for [@group, @member], remote: true do |f| %>
  			   <% f.hidden_field :group_id, value: params[:group_id] %>
  			   <%= f.input :name, label: false, placeholder: ' 👉 add a new member and press + or enter..'%>
  			   <%= f.submit '+', class:"edit-cross" %>
  		     <% end %>
		    </div>
  		<div class="btn-wrapper">
        <%= link_to "🏠", root_path, class:"btn btn-light", style:"font-size:20px", data: { turbolinks: false } %>
  		  <%= link_to "back", groups_path, class:"btn btn-light", data: { turbolinks: false } %>
  		  <% if @group.members.any? %>
  		  <%= link_to "start a new split with this team ", new_group_activity_cost_path(@group), class:"btn btn-light" %>
  		  <% else %>
  			  <button class="btn btn-light">start a new split with this team</button>
  		   <% end %>
  		</div>
    </div>
</div>
