<div class="container mt-3">
  <h2 class="font-weight-normal">edit group*</h2>
	<h3 class="font-weight-normal mt-3"><%= @group.group_name %></h3>
	<div>
	  <%= simple_form_for @group do |f| %>
		  <%= f.input :group_name, placeholder: '👉🏼 update your team name' %>
          <%= f.submit '💾 save', class:"btn-light" %>
      <% end %>
    </div>
         <p class="mt-3"> group members: </p>
	     <% @group.members.each do |member| %>
           <div class="btn-group">
	       <button type="button" class="btn btn-light p-1 border border-normal"><%= member.name %></button>
		   <button type="button" class="btn btn-light p-1 border border-normal"><%= link_to "🗑", group_member_path(@group, member), remote: true, method: :delete, class:"card-text" %></button>
		</div>
	   <% end %>
	    <div class="form-member">
	     <%= simple_form_for [@group, @member], remote: true do |f| %>
		   <% f.hidden_field :group_id, value: params[:group_id] %>
		   <%= f.input :name, placeholder: ' 👉 add a new member and press + or enter..' %>
		   <%= f.submit '+', class:"btn-light p-1 border border-normal cross" %>
	     <% end %>
	    </div>
	<div class="btn-wrapper mt-3">
	  <%= link_to "back", groups_path, class:"btn-dark" %>
	  <%= link_to "start a new split with this team ", new_group_activity_cost_path(@group), class:"btn-light" %> 
	</div>
</div>
