<div class="container mt-3">
  <h2 class="font-weight-normal">edit group*</h2>
	<h3 class="font-weight-normal"><%= @group.group_name %></h3>
	  <%= simple_form_for @group do |f| %>
		  <%= f.input :group_name, placeholder: '👉🏼 update your team name' %>
          <%= f.submit '💾 save new name', class:"btn-light p-1" %>
    <% end %>
    <div>
	  <div class="d-flex mt-3">
	   <% @group.members.each do |member| %>
		 <div class="d-flex border border-light m">
	       <p><%= member.name %></p>
		   <%= link_to "🗑", group_member_path(@group, member), remote: true, method: :delete %>
		 </div>
	   <% end %>
	 </div>
	     <%= simple_form_for [@group, @member], remote: true do |f| %>
		   <% f.hidden_field :group_id, value: params[:group_id] %>
		   <%= f.input :name, placeholder: ' 👉 please type one name and press + or enter to add more ..' %>
		   <%= f.submit '+', class:"btn-light p-1" %>
	     <% end %>
		<div class="btn-wrapper mt-3">
		  <%= link_to "back", groups_path, class:"btn-light" %>
		  <%= link_to "start a new split with this team ", new_group_activity_cost_path(@group), class:"btn-light" %> 
		</div>
	</div>
</div>
