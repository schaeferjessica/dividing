<div class="groups-index setup">
  <div class="container">

    <div class="accordion-wrapper">
      <% if current_user %>
        <h2>saved groups<sup>*</sup></h2>
          <p class="lighter">here you can see your saved groups and start a new split.</p>

          <% current_user.groups.each do |group| %>
            <div class="accordion">
              <div class="acc-tab">
                <button class="acc-btn">
                  <span><%= group.group_name %></span>
                  <span class="plus"> + </span>
                </button>
              </div>

  		        <div class="acc-tabpanel">
                <div class="acc-tabpanel-inner">

                  <div class="acc-inner-text">
  		              <% group.members.each do |member| %>
                       <div>
      				         <%= member.name %>
                       </div>
                    <% end %>
                  </div>

                  <div class="action-wrapper">
                    <%= link_to "Edit", edit_group_path(group), class:"btn btn-light btn-small" %>
                    <%= link_to "ğŸ—‘", group_path(group), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-light btn-small" %>
                    <%= link_to "start a new split with this team ", new_group_activity_cost_path(group), class:"btn btn-light btn-small" %>
                  </div>

                </div>
              </div>
            </div>
          <% end %>
      <% end %>
    </div>

  <div class="accordion-wrapper">
    <% if current_user %>
      <h2>saved splits<sup>*</sup></h2>
      <p class="lighter">here you can see your previous split.</p>
      <% current_user.groups.each do |group| %>
        <div class="accordion">
         <div class="acc-tab">
            <button class="acc-btn">
              <span>splits for <%= group.group_name %></span>
              <span class="plus"> + </span>
            </button>
          </div>
          <div class="acc-tabpanel border-bottom">
            <% group.activity_costs.each do |cost| %>
              <div class="acc-tabpanel-inner acc-inner-text">

                <div class="balance-wrapper">
                  <div><%= cost.total_balance %><%= cost.currency %></div>
                  <div class="mb-3"><%= cost.updated_at.strftime("%A %d.%m.%Y") %></div>
                </div>

                <div class="action-wrapper">
                  <%= link_to "See past split", activity_cost_splits_path(cost), class:"btn btn-light btn-small mb-3"%>
                  <%= link_to "ğŸ—‘", group_activity_cost_path(group, cost), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-light btn-small mb-3" %>
                </div>

              </div>
            <%end%>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
     <div class="btn-wrapper">
      <%= link_to "back", root_path, class:"btn btn-light", data: { turbolinks: false } %>
     </div>
  </div>
</div>
