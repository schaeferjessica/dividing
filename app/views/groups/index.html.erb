<div class="groups-index">
  <div class="container">

    <div class="accordion-wrapper">
      <% if current_user %>
        <h2>saved groups<sup>*</sup></h2>
          <p class="text-thin">here you can see your saved groups and start a new split.</p>

          <% current_user.groups.each do |group| %>
            <div class="accordion">
              <div class="acc-tab">
                <button class="acc-btn">
                  <span><%= group.group_name %></span>
                  <span> + </span>
                </button>
              </div>

  		        <div class="acc-tabpanel">
                <div class="acc-tabpanel-inner">

                  <div class="text-thin">
  		              <% group.members.each do |member| %>
                       <div>
      				         <%= member.name %>
                       </div>
                    <% end %>
                  </div>

                  <div class="action-wrapper">
                    <%= link_to "Edit", edit_group_path(group), class:"btn-light btn-small" %>
                    <%= link_to "ğŸ—‘", group_path(group), method: :delete, class:"btn-light btn-small" %>
                    <%= link_to "start a new split with this team ", new_group_activity_cost_path(group), class:"btn-light btn-small" %>
                  </div>

                </div>
              </div>

            <% end %>
          <% end %>
      </div>
    </div>
  <%= link_to "Back", root_path, class:"btn-dark", data: { turbolinks: false } %>
</div>
