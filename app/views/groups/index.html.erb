<div class="groups-index setup">
  <div class="container">

    <div class="accordion-wrapper">
      <% if current_user %>
        <h2>saved groups<sup>*</sup></h2>
          <p class="text-thin">here you can see your saved groups and start a new split.</p>

          <% current_user.groups.each do |group| %>
            <div class="accordion">
              <div class="acc-tab">
                <button class="acc-btn">
                  <span><%= group.group_name %></span>
                  <span class="plus"> + </span>
                </button>
              </div>

  		        <div class="acc-tabpanel">
                <div class="acc-tabpanel-inner">

                  <div class="text-thin">
  		              <% group.members.each do |member| %>
                       <div>
      				         <%= member.name %>
                       </div>
                    <% end %>
                  </div>

                  <div class="action-wrapper">
                    <%= link_to "Edit", edit_group_path(group), class:"btn btn-light btn-small" %>
                    <%= link_to "ğŸ—‘", group_path(group), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-light btn-small" %>
                    <%= link_to "start a new split with this team ", new_group_activity_cost_path(group), class:"btn btn-light btn-small" %>
                  </div>

                </div>
              </div>
            </div>
          <% end %>
      <% end %>
    </div>

    <% if current_user %>
        <h2>saved splits<sup>*</sup></h2>
          <p class="text-thin">here you can see your previous split.</p>
        <% current_user.groups.each do |group| %>
          <div class="form-control item-row">
              <div class="item-row-details">
                <span class="font-weight-normal"><%= group.group_name %></span>
                <% group.activity_costs.each do |cost| %>
                  <span><%= cost.total_balance %><%= cost.currency %></span>
                  <span><%= cost.updated_at.strftime("%A %d.%m.%Y") %></span>
                <%end%>
              </div>
              <div class="item-row-details">
                <% group.activity_costs.each do |cost| %>
                  <%= link_to "See past split", activity_cost_splits_path(cost), class:"btn btn-light btn-small"%>
                  <%= link_to "ğŸ—‘", group_path(group, cost), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-light btn-small" %>
                <% end %>
              </div>
          </div>
                <% end %>
        <% end %>
     <div class="btn-wrapper">
      <%= link_to "Back", root_path, class:"btn btn-dark", data: { turbolinks: false } %>
     </div>
  </div>
</div>
