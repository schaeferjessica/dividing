        <div class="wrapper">
          <%= f.input :name, label: false, placeholder: ' ðŸ‘‰ please type one name and press + or enter to add more ..' %>
          <%= f.submit '+', class:"cross"%>
        </div>
        <div class="d-flex">
        <% @group.members.each do |member| %>
          <div class="btn-group">
            <button type="button" class=""><%= member.name %></button>
            <button type="button" class=""><%= link_to "ðŸ—‘", group_member_path(@group, member), remote: true, method: :delete %></button>
          </div>
        <% end %>
        </div>
        <div class="btn-wrapper">
          <%= link_to "back", new_group_path, class:"btn-light" %>
            <% if @group.members.any? %>
              <%= link_to "next", new_group_activity_cost_path(@group), class:"btn-light" %>
            <% else %>
              <button class="btn-light">Next</button>
            <% end %>
        </div>
    <% end %>
