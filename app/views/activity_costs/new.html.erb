        <%= f.input :employer_contribution, label: 'Employer contribution or Discount', placeholder: 'ðŸ‘‰ Employer contribution or discount (optional)..' %>
        <%= f.input :currency, collection: ActivityCost::CURRENCY, label: 'Currency', include_blank: false %>
