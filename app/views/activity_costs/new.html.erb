      <div class="btn-wrapper">
        <%= link_to "back", new_group_path, class:"btn btn-light", data: { turbolinks: false }  %>
        <%= f.submit "next", class:"btn btn-light", data: { turbolinks: false } %>
      </div>
    <% end %>
  </div>
</div>
