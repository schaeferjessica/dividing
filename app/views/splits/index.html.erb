<div class="splits-index setup">
  <div class="container">
    <div class="context">
      <h1 class="heading">Okay members of <%= @activity_cost.group.group_name %>!</h1>
      <p>Let's split the cost between us <strong><%= @activity_cost.split_type %></strong></p>
      <p>Send the link to your group so people can see how much they owe and confirm when they have paid. ðŸ¤“</p>
    </div>

      <% @splits.each do |split| %>
        <% if split.member.name == split.activity_cost.paid_by %>
        <div class="accordion open">
          <div class="acc-tab">
            <button class="acc-btn">
              <span><%= split.member.name %></span>
              <span class="plus"> + </span>
            </button>
          </div>

          <div class="acc-tabpanel">
            <div class="acc-tabpanel-inner">
              <span class="text-thin">you spent <%= split.individual_balances %><%= @currency_symbol %> </span>

              <div class="action-wrapper">
                <% if split.status == false %>
                  <%= link_to "oustanding", split_path(split, split: { status: true }), method: :patch, class: "btn btn-light btn-small btn-outstanding" %>
                <% else %>
                  <%= link_to "paid", split_path(split, split: { status: false }), method: :patch, class: "btn btn-light btn-small btn-paid" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>

      <% else %>

      <div class="accordion open">
          <div class="acc-tab">
            <button class="acc-btn">
              <span><%= split.member.name %></span>
              <span class="plus"> + </span>
            </button>
          </div>

          <div class="acc-tabpanel">
            <div class="acc-tabpanel-inner">
              <span class="text-thin">please pay <%= split.activity_cost.paid_by %> <%= split.individual_balances %> <%= split.activity_cost.currency %></span>

              <div class="action-wrapper">
                <% if split.status == false %>
                   <%= link_to "oustanding", split_path(split, split: { status: true }), method: :patch, class: "btn btn-light btn-small btn-outstanding" %>
                <% else %>
                   <%= link_to "paid", split_path(split, split: { status: false }), method: :patch, class: "btn btn-light btn-small btn-paid" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <% end %>
      <% end %>

      <div class="sum">
        <p class="total">subtotal: <%= @activity_cost.actual_cost %><%= @currency_symbol %></p>
        <p class="subtracting">discount/prepaid amount - <%= @activity_cost.employer_contribution %><%= @currency_symbol %></p>
        <p class="additional">additional cost + <%= @activity_cost.service_tip %><%= @currency_symbol %></p>
        <p class="balance">grand total: <%= @activity_cost.total_balance %><%= @currency_symbol %></p>
      </div>

      <div class="btn-wrapper">
        <%= link_to "back", edit_group_activity_cost_path(@activity_cost.group, @activity_cost), class: "btn btn-light", data: { turbolinks: false } %>
        <button class="btn btn-dark btn-link">send link</button>
        <ul class="socialmedia-list is-active">
        <li class="link">
          <button class="btn btn-light" data-container="body" data-toggle="popover" data-placement="top" data-content="URL has been copied to clipboard!">
            <i class="fas fa-link"></i>
          </button>
        </li>
        <li  class="whatsapp">
          <button class="btn btn-light" onclick="window.location.href='whatsapp://app';" data-toggle="popover" data-placement="top" data-content="URL has been copied to clipboard!">
            <i class="fab fa-whatsapp"></i>
          </button>
        </li>
        <li class="slack">
          <button class="btn btn-light" onclick="window.location.href='slack://open';" data-toggle="popover" data-placement="top" data-content="URL has been copied to clipboard!">
            <i class="fab fa-slack"></i>
          </button>
        </li>
      </ul>
    </div>

  </div>
</div>
