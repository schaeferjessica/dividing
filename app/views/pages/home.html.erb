<!-- navbar -->
<div class="navbar navbar-expand-sm navbar-light">
  <% if !user_signed_in? %>
    <div class="inner-logedout">
      <li class="nav-item">
        <button class="btn-light btn-overlay" data-target="log-in-container">sign in</button>
      </li>
      <li class="nav-item">
        <button class="btn-light btn-overlay" data-target="sign-up-container">sign up for free</button>
      </li>
    </div>
  <% else %>
    <div class="inner-logedin">
      <li class="nav-item mt-1">
        <%= link_to "saved groups & splits", groups_path, class:"btn-light", data: { turbolinks: false } %>
      </li>
      <li class="nav-item dropdown">
        <p class="username"><%= current_user.username %></p>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/jschaefer", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <button class="dropdown-item btn-edit">edit your profile ✏️</button>
          <%= link_to "sign out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </div>
  <% end %>
</div>

<!-- home page -->
<section class="home">
  <div class="context container">
    <h1><span class="heading">split your - </span><span id="banner-typed-text"></span></h1>
    <h2>Keep track of all your group expenses. It's quick, easy, and stress-free. 😇</h2>
    <div class="btn-center">
      <%= link_to "start splitting", new_group_path, class: "btn btn-dark btn-big", data: { turbolinks: false }%>
    </div>
  </div>
</section>

<!-- profile -->
<div id="edit-container" class="overlay is-hidden">
  <h2>Edit Your Profile</h2>
  <button class="close-edit"></button>
  <%= simple_form_for(User.new, as: :user, url: registration_path(:user), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
      <%# if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <!-- <p>Currently waiting confirmation for: <%#= resource.unconfirmed_email %></p> -->
      <%# end %>
      <%= f.input :password,
                  hint: "leave it blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Update" %>
    </div>
  <% end %>
  <h3>Cancel my account</h3>
  <p>Unhappy? <%= link_to "Cancel my account", registration_path(:user), data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>

<!-- cookie -->
<!-- <a role="button" class="cookie"><span>🍪</span>accept me </a> -->

<div class="overlay-wrapper">
  <button class="btn-close"></button>
  <!-- overlay sign in -->
  <div id="sign-up-container" class="overlay is-hidden">
    <h2>Create your account - save your team to your account and pay directly via paypal.</h2>
    <%= simple_form_for(User.new, as: :user, url: registration_path(:user)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="name-wrapper">
          <%= f.input :first_name,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "first name" }%>
          <%= f.input :last_name,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "last name" }%>
        </div>
        <%= f.input :username,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "username" }%>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <div class="password-wrapper">
          <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "create my accout", class:"btn-dark" %>
      </div>
    <% end %>
  </div>
  <!-- overlay sign up -->
  <div id="log-in-container" class="overlay is-hidden">
    <h2>welcome back 👋</h2>
    <%= simple_form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "log in", class:"btn-dark" %>
      </div>
    <% end %>
  </div>
</div>

<!-- footer -->
<div class="footer">
  <button class="btn-minimal">contact</button>
  <button class="btn-minimal">impressum</button>
</div>
