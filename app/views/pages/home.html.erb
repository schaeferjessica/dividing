<section class="page-1">
  <div class="btn">
    <button class="btn-light">sign in</button>
    <button class="btn-light">sign up for free</button>
    <button class="btn-minimal">contact</button>
    <button class="btn-minimal">impressum</button>
  </div>
  <div class="context">
    <div class="inner">
      <h1><span class="heading">dividing your - </span><span id="banner-typed-text"></span></h1>
      <h2>Keep track of shared expenses, balances, and who owes who. Dividing the cost and share via link üòá</h2>
      <div class="btn-center">
        <%= link_to "start dividing", new_group_path, class: "btn-start"%>
      </div>
    </div>
     <a role="button" class="cookie"><span>üç™</span>accept me </a>

    <div class="overlay is-hidden">
      <button class="button-top">x</button>
      <div class="text">
        <p>Create your account - save your team to your account and pay directly via paypal.</p>
      </div>
        <div id="sign-up-container">
          <h2>Sign up</h2>
          <%= simple_form_for(User.new, as: :user, url: registration_path(:user)) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :first_name,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "first name" }%>
              <%= f.input :last_name,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "last name" }%>
              <%= f.input :username,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "username" }%>
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" }%>
              <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "create my accout", class:"btn-dark" %>
            </div>
          <% end %>
        </div>
        <div id="log-in-container">
          <h2>Log in</h2>
          <%= simple_form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Log in", class:"btn-dark" %>
            </div>
          <% end %>
        </div>
